    $output = status("Vote saved");
  }
  else if ($op == t("Delete vote")) {
    db_query("DELETE FROM {moderation_votes} WHERE mid = %d", $mid);
    db_query("DELETE FROM {moderation_roles} WHERE mid = %d", $mid);
