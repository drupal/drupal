/**
 * Wrapper function to be able to set callbacks in locale.inc
 */
function locale_inc_callback() {
  $args = func_get_args();
  $function = array_shift($args);
  include_once DRUPAL_ROOT . '/includes/locale.inc';
  return call_user_func_array($function, $args);
}

