function help_link($type) {
  if ($type == "admin") {
    $links[] = la(t("help"), array("mod" => "help"));
  }

  return $links ? $links : array();
}

function help_admin() {
  foreach (module_list() as $name) {
    if (module_hook($name, "help")) {
      print "<h2>". ucfirst($name) ." module</h2>";
      print module_invoke($name, "help");
    }
  }
}

?>
