function forum_node_name($node) {
  return t('forum topic');
}

function forum_access($op, $node) {
  if ($op == 'view') {
    return $node->status;
  }
  if ($op == 'create') {
    return user_access('create forum topics');
  }
}

function forum_perm() {
  return array('create forum topics');
}

function forum_settings() {

