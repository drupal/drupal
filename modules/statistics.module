    $output .= format_interval(variable_get("statistics_flush_accesslog_timer", 259200)) ."</h3>";
  }

  $result = db_query($query);

  $output .= "<table border=\"1\" cellpadding=\"3\" cellspacing=\"0\">\n";
  $output .= " <tr><th>". t("URL") ."</th><th>". t("count") ."</th></tr>\n";
