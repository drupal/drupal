/**
 * Implemenation of hook_theme().
 */
function simpletest_theme() {
  return array(
    'simpletest_test_table' => array(
      'arguments' => array('table' => NULL)
    ),
    'simpletest_result_summary' => array(
      'arguments' => array('form' => NULL)
