/**
 * @file
 * Defines list field types that can be used with the Options module.
 */

/**
 * Implement hook_theme().
 */
function list_theme() {
  return array(
    'field_formatter_list_default' => array(
      'arguments' => array('element' => NULL),
    ),
    'field_formatter_list_key' => array(
      'arguments' => array('element' => NULL),
    ),
  );
}

