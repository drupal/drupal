      'title' => t('Taxonomy term'),
      'callback' => 'taxonomy_term_page',
      'access' => user_access('access content'),
      'type' => MENU_CALLBACK);

    $items[] = array('path' => 'taxonomy/autocomplete',
      'title' => t('Autocomplete taxonomy'),
