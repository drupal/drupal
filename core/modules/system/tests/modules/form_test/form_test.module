      '#title' => $type . ' (checked)',
      '#return_value' => 1,
      '#default_value' => 1,
      '#test_hijack_value' => NULL,
      '#disabled' => TRUE,
    );
  }

  // Weight, number, range.
  foreach (array('weight', 'number', 'range') as $type) {
    $form[$type] = array(
      '#type' => $type,
      '#title' => $type,
