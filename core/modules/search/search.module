/**
 * Implements hook_theme().
 */
function search_theme() {
  return array(
    'search_result' => array(
      'variables' => array('result' => NULL, 'plugin_id' => NULL),
      'file' => 'search.pages.inc',
      'template' => 'search-result',
    ),
  );
}

