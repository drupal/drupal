  $subscriber->activated = 0;
  $subscriber->uid = NULL;
  $subscriber->mail = NULL;
  $subscriber->language = language_default()->language;
  $subscriber->tids = array();
  $subscriber->newsletter_subscription = array();

  if ($account) {
